<section class="vh-100">
    <div class="container py-5 h-20">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5 login-form">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mt-5 mb-5">Sign in</h3>

                        <div class="form-outline mb-4">
                            <input type="email" id="email-login" class="form-control form-control-lg" />
                            <label class="form-label" for="email-login">Email</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="password-login" class="form-control form-control-lg" />
                            <label class="form-label" for="password-login">Password</label>
                        </div>

                        <button class="btn btn-primary btn-lg btn-block mb-5" type="submit">Login</button>

                    </div>
                </div>
            </div>


            <div class="col-12 col-md-8 col-lg-6 col-xl-5 signup-form">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Sign up</h3>

                        <div class="form-outline mb-4">
                            <input type="email" id="username-signup" class="form-control form-control-lg" />
                            <label class="form-label" for="username-signup">Username</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="email" id="email-signup" class="form-control form-control-lg" />
                            <label class="form-label" for="email-signup">Email</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="password-signup" class="form-control form-control-lg" />
                            <label class="form-label" for="password-signup">Password</label>
                        </div>

                        <button class="btn btn-primary btn-lg btn-block" type="submit">Sign-up</button>

                    </div>
                </div>
            </div>


        </div>



    </div>

</section>

<script src="/javascript/login.js"></script>