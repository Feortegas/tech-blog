<div class="card post">
    <div class="card-header">
        <h4>{{title}}</h4>
        <span class="d-flex justify-content-end">{{user.username}}</span>
        <span class="d-flex justify-content-end">{{format_date created_at}}</span>
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{post_text}}</p>
            <footer class="justify-content-start">
                <a href="/post/{{id}}"><i class="bi bi-chat-left"></i> {{comments.length}} {{format_plural "comment" comments.length}}</a>
            </footer>

        </blockquote>
    </div>
</div>