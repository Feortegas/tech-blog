<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="p-3">
    Edit Post
  </h2>
  <form class="edit-post-form border border-light p-3">

    <div>
      <input type="text" class="form-control w-100" id="post-title" name="post-title" value="{{post.title}}" />
    </div>
    <div>
      <textarea class="form-control" id="post-text" rows="3" name="post-text">{{post.post_text}}</textarea>
    </div>
    
    <div>
      {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}"><i class="bi bi-chat-left"></i> {{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>